@using CustomERP.Web.ViewModels.Administration.Schedules
@model CustomERP.Web.ViewModels.Administration.Schedules.SchedulesListViewModel

@{
    ViewData["Title"] = "Index";
    var table = new SchedulesViewModel();
}


<div class="container">
    <h1>Schedules</h1>

    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => table.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => table.NumberOfDays)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.SchedulesViewModels)
            {
                <tr>
                    <td>
                        <a class="nav-link" style="text-decoration: none" asp-area="Administration" asp-controller="ScheduleDays" asp-action="Index" asp-route-id="@item.Id">
                            @Html.DisplayFor(modelItem => item.Name)
                        </a>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NumberOfDays)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <p>
        <a class="btn bg-success" asp-action="Create">Create New&nbsp;&nbsp;<i class="fas fa-plus"></i></a>
    </p>
</div>

