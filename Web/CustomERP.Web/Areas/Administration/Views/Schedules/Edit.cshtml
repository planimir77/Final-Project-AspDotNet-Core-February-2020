@model CustomERP.Web.ViewModels.Administration.Schedules.ScheduleEditViewModel

@{
    ViewData["Title"] = "Edit";
}


<div class="container">
    
    <h1>Edit</h1>

    <h4>Schedule</h4>
    <hr />

    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class=""></label>
                    <input asp-for="Name" class="form-control"/>
                    @if (this.TempData["Message"] != null)
                    {
                        <div class="alert alert-danger text-danger" role="alert">
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                            <strong class="text-black-50">@TempData["Message"]</strong>
                        </div>
                    }
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="NumberOfDays" class=""></label>
                    <input asp-for="NumberOfDays" class="form-control"/>
                    <span asp-validation-for="NumberOfDays" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-success rounded">Save  <i class="far fa-save bigger-div"></i></button>
                </div>
            </form>
        </div>
    </div>
</div>


<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
