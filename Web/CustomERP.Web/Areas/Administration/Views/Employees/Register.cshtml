@model CustomERP.Web.ViewModels.Administration.Employees.EmployeeRegisterViewModel
@{
    this.ViewData["Title"] = "Register New Employee";

    var companies = this.Model.Companies.Select(x => new SelectListItem(x.Name, x.Id));

    var sections = this.Model.Sections.Select(x => new SelectListItem(x.Name, x.Id.ToString()));

    var shifts = this.Model.Shifts.Select(x => new SelectListItem(x.Name, x.Id.ToString()));

    var users = this.Model.ApplicationUsers.Select(x => new SelectListItem(x.FullName, x.Id));
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="Register" method="post">
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FullName"></label>
                <input asp-for="FullName" class="form-control" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Position"></label>
                <input asp-for="Position" class="form-control" />
                <span asp-validation-for="Position" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ShiftId"></label>
                <select asp-for="ShiftId" asp-items="@shifts" class="form-control"></select>
                <span asp-validation-for="ShiftId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AddressId"></label>
                <input asp-for="AddressId" class="form-control" />
                <span asp-validation-for="AddressId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SectionId"></label>
                <select asp-for="SectionId" asp-items="@sections" class="form-control"></select>
                <span asp-validation-for="SectionId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CompanyId"></label>
                <select asp-for="CompanyId" asp-items=@companies class="form-control"></select>
                <span asp-validation-for="CompanyId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ManagerId"></label>
                <select asp-for="ManagerId" asp-items="users" class="form-control"></select>
                <span asp-validation-for="ManagerId" class="text-danger"></span>
            </div>
            <div class="d-flex justify-content-between">
                <button type="submit" class="btn btn-outline-success">Register</button>
                <a type="button" class="btn btn-outline-warning btn-link" asp-area="Administration" asp-controller="Employees" asp-action="Index">Cancel</a>
            </div>
        </form>
    </div>
</div>
<hr />

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
