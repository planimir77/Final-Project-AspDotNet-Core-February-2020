@model CustomERP.Web.ViewModels.Administration.Accounts.EmployeeRegisterViewModel
@{
    this.ViewData["Title"] = "Register New Employee";

    var companies = this.Model.Companies.Select(x => new SelectListItem(x.Name, x.Id));

    var sections = this.Model.Sections.Select(x => new SelectListItem(x.Name, x.Id.ToString()));

    var shifts = this.Model.Shifts.Select(x => new SelectListItem(x.Name, x.Id.ToString()));

    var users = this.Model.ApplicationUsers.Select(x => new SelectListItem(x.FullName, x.Id));
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="RegisterEmployee" method="post">
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="@Model.FullName"></label>
                <input asp-for="@Model.FullName" class="form-control" />
                <span asp-validation-for="@Model.FullName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Position"></label>
                <input asp-for="@Model.Position" class="form-control" />
                <span asp-validation-for="@Model.Position" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.ShiftId"></label>
                <select asp-for="ShiftId" asp-items="@shifts" class="form-control"></select>
                <span asp-validation-for="@Model.ShiftId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.AddressId"></label>
                <input asp-for="@Model.AddressId" class="form-control" />
                <span asp-validation-for="@Model.AddressId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.SectionId"></label>
                <select asp-for="SectionId" asp-items="@sections" class="form-control"></select>
                <span asp-validation-for="@Model.SectionId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.CompanyId"></label>
                <select asp-for="CompanyId" asp-items=@companies class="form-control"></select>
                <span asp-validation-for="@Model.CompanyId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.ManagerId"></label>
                <select asp-for="ManagerId" asp-items="users" class="form-control"></select>
                <span asp-validation-for="@Model.ManagerId" class="text-danger"></span>
            </div>
            <div class="d-flex justify-content-between">
                <button type="submit" class="btn btn-outline-success">Register</button>
                <button type="button" class="btn btn-outline-warning">Cancel</button>
            </div>
        </form>
    </div>
</div>
<hr />

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
